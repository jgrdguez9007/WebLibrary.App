@{
    ViewData["Title"] = "Inicio";
}
<section class="space-y-10">
  <!-- Hero -->
  <div class="rounded-2xl bg-white shadow-sm ring-1 ring-black/5 p-8">
    <h1 class="text-4xl font-bold tracking-tight">Biblioteca Web</h1>
    <p class="mt-3 text-slate-600 max-w-2xl">
      Explora y busca dentro de documentos (PDF con OCR). 
    </p>

    <form class="mt-6 flex flex-col gap-3 sm:flex-row" action="/search" method="get">
      <input name="q" type="text" placeholder="Buscar por título, palabra clave, sección…"
             class="w-full rounded-xl border border-slate-300 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
      <button class="rounded-xl bg-indigo-600 text-white px-5 py-3 hover:bg-indigo-700 transition">
        Buscar
      </button>
    </form>
    <p class="mt-2 text-xs text-slate-500">* Filtrado por palabras claves.</p>
  </div>

  <!-- Categorías -->
  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <a href="/docs?cat=leyes"
       class="group rounded-xl bg-white shadow-sm ring-1 ring-black/5 p-6 hover:shadow-md transition">
      <div class="text-2xl">⚖️</div>
      <h3 class="mt-3 font-semibold group-hover:text-indigo-600">Leyes</h3>
      <p class="mt-1 text-sm text-slate-600">Ley, Decreto-ley, Decreto, Reglamento, Resolución.</p>
    </a>

    <a href="/docs?cat=documentos-internos"
       class="group rounded-xl bg-white shadow-sm ring-1 ring-black/5 p-6 hover:shadow-md transition">
      <div class="text-2xl">🏢</div>
      <h3 class="mt-3 font-semibold group-hover:text-indigo-600">Documentos Internos</h3>
      <p class="mt-1 text-sm text-slate-600">Oficios, memorandos, actas, circulares.</p>
    </a>

    <a href="/docs?cat=memorias-anuales"
       class="group rounded-xl bg-white shadow-sm ring-1 ring-black/5 p-6 hover:shadow-md transition">
      <div class="text-2xl">📘</div>
      <h3 class="mt-3 font-semibold group-hover:text-indigo-600">Memorias Anuales</h3>
      <p class="mt-1 text-sm text-slate-600">Informes, organigramas y anexos.</p>
    </a>

    <a href="/docs?cat=estudios"
       class="group rounded-xl bg-white shadow-sm ring-1 ring-black/5 p-6 hover:shadow-md transition">
      <div class="text-2xl">📊</div>
      <h3 class="mt-3 font-semibold group-hover:text-indigo-600">Estudios</h3>
      <p class="mt-1 text-sm text-slate-600">Análisis sectoriales y técnicos.</p>
    </a>

    <a href="/docs?cat=procedimientos"
       class="group rounded-xl bg-white shadow-sm ring-1 ring-black/5 p-6 hover:shadow-md transition">
      <div class="text-2xl">🧭</div>
      <h3 class="mt-3 font-semibold group-hover:text-indigo-600">Procedimientos</h3>
      <p class="mt-1 text-sm text-slate-600">Normas y guías operativas.</p>
    </a>
  </div>
</section>
